<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgset">





    <TextView
        android:text="Name:"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/pname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="200dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pname"
        android:layout_alignParentRight="true"
        android:id="@+id/prname" />


    <TextView
        android:text="Age:"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/pname"
        android:id="@+id/page"
      />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="32dp"
        android:layout_alignBaseline="@+id/page"
        android:layout_alignParentRight="true"
        android:id="@+id/prage"
        android:layout_toEndOf="@+id/pphone"
        android:layout_alignStart="@+id/prname" />


    <TextView
        android:text="Blood Group:"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/pweight"
        android:layout_below="@+id/prage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/prweight"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/pweight"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pweight" />

    <TextView
        android:text="City :"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/pdate"
        android:layout_below="@+id/pweight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:id="@+id/prdate"
        android:layout_alignTop="@+id/pdate"
        android:layout_alignStart="@+id/prage" />

    <TextView
        android:text="Contact:"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/pphone"
        android:layout_below="@+id/pdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pphone"
        android:layout_alignParentRight="true"
        android:id="@+id/prphone"
        android:textSize="25sp"
        android:layout_alignTop="@+id/pphone"
        android:layout_alignStart="@+id/prdate" />



</RelativeLayout>